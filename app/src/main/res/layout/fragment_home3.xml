<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/home_3_bg1"
                android:gravity="center|center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <com.benkie.hjw.view.CircleImageView
                    android:id="@+id/iv_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/iv_head" />

                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="未登陆"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_project"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_layout_bg"
                    android:drawablePadding="15dp"
                    android:drawableTop="@mipmap/iv_project"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="发布工程展示"
                    android:textSize="15sp" />

                <View
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/gray_db" />

                <TextView
                    android:id="@+id/tv_skill"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_layout_bg"
                    android:drawablePadding="15dp"
                    android:drawableTop="@mipmap/iv_skill"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="发布技术服务"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_collect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_layout_bg"
                    android:drawableLeft="@mipmap/iv_mycollection"
                    android:drawablePadding="15dp"
                    android:drawableRight="@mipmap/arrow_right_gray"
                    android:padding="15dp"
                    android:text="我的收藏"
                    android:textColor="@drawable/selector_text_color_black_33"
                    android:textSize="15sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_tuijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_layout_bg"
                    android:drawableLeft="@mipmap/iv_tuijian"
                    android:drawablePadding="15dp"
                    android:drawableRight="@mipmap/arrow_right_gray"
                    android:padding="15dp"
                    android:text="推荐好友"
                    android:textColor="@drawable/selector_text_color_black_33"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_db" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_layout_bg"
                    android:drawableLeft="@mipmap/iv_message"
                    android:drawablePadding="15dp"
                    android:drawableRight="@mipmap/arrow_right_gray"
                    android:padding="15dp"
                    android:text="系统消息"
                    android:textColor="@drawable/selector_text_color_black_33"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/gray_db" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_layout_bg"
                    android:drawableLeft="@mipmap/iv_setting"
                    android:drawablePadding="15dp"
                    android:drawableRight="@mipmap/arrow_right_gray"
                    android:padding="15dp"
                    android:text="设置"
                    android:textColor="@drawable/selector_text_color_black_33"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
